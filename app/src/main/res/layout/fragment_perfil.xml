<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@color/gris"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civImagenPerfilUsuario"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-60dp"
                    android:src="@color/colorFinal" />


                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp">

                    <TextView
                        android:id="@+id/tvNombreUsuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Nombre de Usuario"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=", "
                        android:textSize="24sp"
                        android:fontFamily="@font/nunito_bold"/>
                    <TextView
                        android:id="@+id/tvEdadUsuario"
                        android:fontFamily="@font/nunito_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textSize="24sp"/>
                    <ImageView
                        android:id="@+id/ivInsigniaPrincipal"
                        android:layout_marginStart="15dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/amable"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tvPuestoUsuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puesto"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="12sp"
                        android:paddingEnd="8dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tvPuntajeEstrellas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tvNumeroCalificaciones"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="(10+)"
                        android:textSize="12sp"
                        android:paddingStart="3dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:fontFamily="sans-serif-thin">
                    <TextView
                        android:id="@+id/tvCiudadUsuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New York, EE.UU"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="12sp"/>
                </LinearLayout>

                <View
                    android:background="#228B8B8B"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/tvAcercaDeMi"
                    android:textColor="#8b8b8b"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Acerca de mi"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/tvAcercaDeMiPerfil"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis ut tincidunt urna. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia Curae;"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="#228B8B8B" />

                <TextView
                    android:textColor="#8b8b8b"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servicios"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:paddingVertical="10dp"
                    android:id="@+id/rvEtiquetas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="#228B8B8B"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <TextView
                    android:textColor="#8b8b8b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medallas"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="20dp"
                    android:padding="5dp"/>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <!--<LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/cinta"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:text="10+"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/tiempo"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:text="10+"/>
                    </LinearLayout>-->
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rvMedallas"/>
                </LinearLayout>
                <View
                    android:background="#228B8B8B"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
                <TextView
                    android:textColor="#8b8b8b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registro de trabajos"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rvRegistroTrabajos"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>