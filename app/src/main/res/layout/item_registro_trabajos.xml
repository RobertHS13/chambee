<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lyRegistroTrabajos"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/ivFotoPuestoTrabajo"
        android:layout_width="80dp"
        android:layout_height="fill_parent"
        android:layout_marginEnd="15dp"
        android:src="@color/colorFinal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombrePuesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puesto de trabajo"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvEmpresaRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Empresa"
            android:textColor="#00BCD4"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_star"/>
            <TextView
                android:id="@+id/tvCalificacionEstrellas"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="4.5"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tvNumeroCalificacionTrabajos"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(10+)"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>