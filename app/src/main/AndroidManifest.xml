<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gps.chambee">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_chambee"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_chambee_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".ui.actividades.CalificarUsuarioActivity"/>
        <activity android:name=".ui.actividades.OlvideContrasenaActivity" />
        <activity android:name=".ui.actividades.SeguridadActivity" />
        <activity android:name=".ui.actividades.TelefonoActivity" />
        <activity android:name=".ui.actividades.RecuperarPasswordActivity" />
        <activity android:name=".ui.actividades.PasswordNuevaActivity" />
        <activity android:name=".ui.actividades.PasswordActivity" />
        <activity android:name=".ui.actividades.NombreCompletoActivity" />
        <activity android:name=".ui.actividades.DatosPersonalesActivity" />
        <activity android:name=".ui.actividades.CorreoElectronicoActivity" />
        <activity android:name=".ui.actividades.ConfiguracionesActivity" />
        <activity android:name=".ui.actividades.ChatActivity"/>
        <activity android:name=".ui.actividades.BienvenidaActivity"/>
        <activity android:name=".ui.fragmentos.NotificacionesFragment" />
        <activity android:name=".ui.actividades.SolicitarEmpleoActivity" />
        <activity android:name=".ui.actividades.PostRegistroActivity" />
        <activity android:name=".ui.actividades.PublicarTrabajoActivity" />
        <activity android:name=".ui.actividades.PublicacionActivity" />
        <activity android:name=".ui.actividades.postRegistro" />
        <activity android:name=".ui.actividades.RegisterActivity" />
        <activity android:name=".ui.actividades.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.actividades.SplashScreenActivity" />
        <activity android:name=".ui.actividades.MainActivity"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>